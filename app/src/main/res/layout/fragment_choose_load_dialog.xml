<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.albergon.unirank.Fragments.ChooseLoadDialog">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_black_border"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp"
            android:background="@drawable/rectangle_blue_border">

            <TextView
                android:id="@+id/load_save_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Load save"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_marginBottom="10dp"/>

            <ListView
                android:id="@+id/choose_load_list"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="10"
                android:background="@android:color/transparent"
                android:dividerHeight="10sp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/cancel_load_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="@drawable/button_shape_blue"
                style="@style/ButtonTextAppearance"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
