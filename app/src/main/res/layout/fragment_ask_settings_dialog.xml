<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.albergon.unirank.Fragments.AskSettingsDialog"
    android:background="@drawable/rectangle_black_border"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_blue_border"
        android:padding="5dp">

        <TextView
            android:id="@+id/settings_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give us some information"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/settings_dialog_explanations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It appears it's the first time you use UniRank on your device! We need some information about yourself before you begin ranking. You will still be able to change this later."
            android:textAlignment="center"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left_layout_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/country_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your country"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/gender_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your gender"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/year_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your birth year"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Type of user"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_layout_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/country_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <NumberPicker
                    android:id="@+id/year_picker"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:theme="@style/AppTheme.Picker" />

                <Spinner
                    android:id="@+id/type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ask_settings_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:background="@drawable/button_shape_blue"
            style="@style/ButtonTextAppearance"
            android:layout_margin="5dp"/>

    </LinearLayout>
</FrameLayout>